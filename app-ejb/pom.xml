    <build>
        <finalName>logiweb-rest</finalName>
        <plugins>
            <!-- Changing JVM from default 1.6 (bundled with IDEA's Spring MVC) to 1.7 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
